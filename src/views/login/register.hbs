<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
   <h1 class="text-3x1 m-16 font-bold text-center">Register</h1>

   <form action="/register" method="POST" class="mt-4">
      <input type="number" name="ID_persona" placeholder="ID Persona"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
      <input type="number" name="identificacion" placeholder="Identificación"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
      <input type="text" name="nombres" placeholder="Nombres"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
      <input type="text" name="apellidos" placeholder="Apellidos"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2  focus:bg-white"
         required>

      <select name="Estado_Civil"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
         <option value="" disabled selected>Estado Civil</option>
         <option value="Soltero">Soltero</option>
         <option value="Casado">Casado</option>
         <option value="Divorciado">Divorciado</option>
         <option value="Viudo">Viudo</option>
         <option value="Separado">Separado</option>
         <option value="UnionLibre">Unión Libre</option>
      </select>

      <input type="text" name="Direccion_Residencia" placeholder="Dirección Residencia"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
      <input type="date" name="Fec_Nac" placeholder="Fecha de Nacimiento"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>

      <select name="Sexo"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
         <option value="" disabled selected>Sexo</option>
         <option value="MASCULINO">Masculino</option>
         <option value="FEMENINO">Femenino</option>
      </select>

      <input type="tel" name="Telefono" placeholder="Teléfono"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
      <input type="email" name="correo" placeholder="Correo Electrónico"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>
      <input type="password" name="contraseña" placeholder="Contraseña"
         class="form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
         required>

      <button type="submit"
         class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Registrar</button>

      {{#if error}}
         <p class="text-red-500">{{error}}</p>
      {{/if}}
   </form>
</div>
